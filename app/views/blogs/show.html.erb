
<div class="container">
  <div class="row">	
    <div class="col-sm-6 col-sm-offset-3">
    	<div class="well col-xs-12">
    		<h2><%= @blog.title %></h2>
			  <hr>
			  <h3><%= @blog.content %></h3>
			  <% if current_user && current_user.blog.include?(@blog) %>
     			<p> <%= link_to "Edit Blog", edit_blog_path(@blog), class: "btn btn-primary" %></p>
          <p> <%= link_to "Delete Blog", profile_path, method: :delete, class: "btn btn-danger" %></p>
			  <% end %>
       
      </div>
    </div>
  </div>
</div>